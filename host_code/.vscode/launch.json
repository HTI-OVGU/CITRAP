{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Executable",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/btree_host_code",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb", // Adjust if gdb is not in this path
